<UserControl x:Class="Kalender_Project_FlorianRohat.UserControls.EventItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kalender_Project_FlorianRohat.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="350">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="EventText" Grid.Column="0" Text="Title" Margin="2"/>
            <TextBlock x:Name="EventDate" Grid.Column="1" Text="Date" Margin="2"/>
        </Grid>
    </Border>
</UserControl>
