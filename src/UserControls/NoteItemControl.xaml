<UserControl x:Class="Kalender_Project_FlorianRohat.NoteItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kalender_Project_FlorianRohat"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="153">
    <Grid>
        <Button x:Name="NoteButton" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="NoteTitle" Text="Note Title" FontWeight="Bold" FontSize="15" Margin="2" VerticalAlignment="Center"/>
                <Label Content=">" Grid.Column="1" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
