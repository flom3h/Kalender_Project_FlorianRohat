<UserControl x:Class="Kalender_Project_FlorianRohat.TodoItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kalender_Project_FlorianRohat"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="350">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TodoText" Grid.Column="0" Text="Todo Text" Margin="2"/>
            <TextBlock x:Name="TodoDate" Grid.Column="1" Text="Date" Margin="2"/>
            <Button x:Name="CheckButton" Grid.Column="2" Content="✔" Margin="5,0"/>
            <Button x:Name="DeleteButton" Grid.Column="3" Content="✘" Margin="5,0"/>
        </Grid>
    </Border>
</UserControl>
