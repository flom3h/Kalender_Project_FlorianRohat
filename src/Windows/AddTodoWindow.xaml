<Window x:Class="Kalender_Project_FlorianRohat.AddTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Kalender_Project_FlorianRohat"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Add a Todo" Height="83" Width="496">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal" Background="Beige">
            <xctk:WatermarkTextBox x:Name="TodoInput" Width="180" Margin="10" Watermark="Todo Titel..."/>
            <DatePicker x:Name="TodoDate" Width="180" Margin="10"/>
            <Button x:Name="CreateButton" Content="Erstellen" Width="60" Margin="10" Click="CreateClick"/>
        </StackPanel>
    </Grid>
</Window>